@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <title>404 - Error page pack all in one</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/login/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/login/css/fontawesome.css">
    <link rel="stylesheet" type="text/css" href="/login/css/login.css">
</head>

<body>
    <div class="loader-wrapper" id="loader-wrapper">
        <div class="loader"></div>
    </div>
    <section class="page-section login-page">
        <div class="full-width-screen">
            <div class="container-fluid">
                <div class="content-detail">
                    <div class="main-info">
                        <div class="hero-container">
                            <form class="login-form" method="post" asp-controller="Auth" asp-action="Login">
                                <div class="imgcontainer">
                                    <img src="/login/images/logo.png" alt="Avatar" class="avatar">
                                </div>
                                <div class="input-control">
                                    <div asp-validation-summary="All" class="d-none">
                                        <span>Adam ol, doğru bilgiler gir!</span>
                                    </div>
                                    <input placeholder="Kullanıcı Adı" asp-for="Username" />
                                    <span class="password-field-show">
                                        <input type="password" placeholder="Şifre" asp-for="Password"
                                               class="password-field" value="">
                                        <span data-toggle=".password-field"
                                              class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                    </span>
                                    <label class="label-container">
                                        Beni Hatırla
                                        <input type="checkbox" asp-for="RememberMe" />
                                        <span class="checkmark"></span>
                                    </label>
                                    <span class="psw">
                                        <a href="forgot.html" class="forgot-btn">
                                            Şifremi unuttum!
                                        </a>
                                    </span>
                                    <span class="psw">
                                        <a asp-action="Register" class="forgot-btn">
                                            Üye Ol
                                        </a>
                                    </span>
                                    <div class="login-btns">
                                        <button type="submit">Giriş</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/login/js/jquery-3.5.1.min.js"></script>
    <script src="/login/js/script.js"></script>
</body>

</html>